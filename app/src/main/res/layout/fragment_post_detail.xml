<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.PostDetailFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bar"
        android:background="?android:attr/windowBackground">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:background="?android:attr/windowBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Photo"
                    android:textColor="@color/black"/>

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bar"
        android:id="@+id/recycler_view"/>

    <RelativeLayout
        android:id="@+id/reviewLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recycler_view">

        <ImageButton
            android:id="@+id/reviewStar"
            android:background="@drawable/ic_reviewstar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rating"
            android:text="5.0"
            android:layout_toRightOf="@id/reviewStar"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:id="@+id/numOfRating"
            android:text="(3)"
            android:layout_toRightOf="@id/rating"/>
    </RelativeLayout>

    <Button
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:id="@+id/buyButton"
        android:text="BUY"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:layout_below="@id/reviewLayout"/>

    <Button
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:id="@+id/removeButton"
        android:text="Remove "
        android:textSize="30sp"
        android:layout_gravity="center"
        android:layout_below="@id/reviewLayout"/>

</RelativeLayout>